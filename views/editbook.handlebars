<h1>Editando: {{books.autor}}</h1>
<a href="/">Voltar</a>
<form action="/book/update" method="post" class="form">
    <input type="hidden" name="id" value="{{books.id}}">
    <div class="form-control">
        <label for="autor">Autor:</label>
        <input type="text" name="autor" value="{{books.autor}}">
    </div>
    <div class="form-control">
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" value="{{books.titulo}}">
    </div>
    <div class="form-control">
        <label for="preco">Pre√ßo:</label>
        <input type="text" name="preco" value="{{books.preco}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if books.capaDuro}}
        <input type="checkbox" name="capaDuro" checked>
        {{else}}
        <input type="checkbox" name="capaDuro">
        {{/if}}
        <label for="capaDuro">Capa dura</label>
    </div>
    <div class="form-control">
        <input type="submit" value="Editar Livro">
    </div>
</form>